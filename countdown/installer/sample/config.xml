		<variable>
			<name>			smic_bookmarktable</name>
			<htmlname>		[Bookmarktable]</htmlname>
			<htmldesc>		[Bookmark table//   - leave blank for no bookmark support//     DEFAULT: 'pma_bookmark']</htmldesc>
			<required>		0</required>
			<newline>		1</newline>
			<formtype>		input</formtype>
			<defaultvalue>	=</defaultvalue>
